<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardElevation="10dp">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name_bill_popup"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryDark"

            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/date_bill_popup"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorDarkBlue"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/amount_bill_popup"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/shareWith"
            android:text="Share with : "
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000837"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>
        <ListView
            android:id="@+id/list_view_member_bill_popup"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/created_by_bill_popup"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorDarkBlue"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/listRefundtext"
            android:textSize="15sp"
            android:textStyle="italic"
            android:textColor="@color/colorDarkBlue"
            android:text="actual refund : "

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/listRefund"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toTopOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintVertical_bias="1.0">

        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>
    <Button
        android:id="@+id/close_popup_bill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />

</androidx.cardview.widget.CardView>
